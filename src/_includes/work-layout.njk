---
layout: layout.njk
---

<div class="grid grid-cols-6 lg:grid-cols-12 gap-3 lg:pb-8">
  <div class="pb-8 lg:pb-0 lg:col-start-4 col-span-2">
    <p>{{ publisher }}</p>
    <h2>{{ title }}</h2>
    <time>{{ publish_date }}</time>
  </div>
  <p class="pb-8 lg:pb-0 col-start-4 lg:col-start-9 col-span-3">{{ text | striptags(true) | escape | nl2br }}</p>
</div>
<div class="content">
  {{ content | safe }}
</div>