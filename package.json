{
  "name": "laura-portfolio",
  "private": true,
  "scripts": {
    "watch:11ty": "npx @11ty/eleventy --serve",
    "watch:css": "tailwindcss -i src/assets/css/tailwind.css -o _site/assets/css/tailwind.css --watch --postcss",
    "start": "concurrently npm:watch:*",
    "build:css": "tailwindcss -i src/assets/css/tailwind.css -o _site/assets/css/tailwind.css --postcss",
    "build:11ty": "npx @11ty/eleventy",
    "build": "npm run build:11ty && npm run build:css"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.0.1",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.3.1"
  }
}